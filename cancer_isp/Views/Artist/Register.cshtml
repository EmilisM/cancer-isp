@using cancer_isp.Models
@using cancer_isp.Models.Dbo
@model ArtistRegistrationModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_Message")

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Artist registration
                    </h5>
                    <div class="card-body">
                        @using (Html.BeginForm("RegisterArtist", "Artist", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label class="profile-field-title">Pseudonym</label>
                                <br/>
                                @Html.TextBoxFor(model => model.Pseudonym, new {@class = "form-control", @placeholder = "Pseudonym"})
                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Full name</label>
                                <br/>
                                @Html.TextBoxFor(model => model.Fullname, new {@class = "form-control", @placeholder = "Full Name"})

                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Birthdate</label>
                                <br/>
                                @Html.TextBoxFor(model => model.Birthdate, "{0:yyyy-MM-dd}", new {@class = "form-control", @placeholder = "Birthdate"})
                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Occupation</label>
                                <br/>
                                @Html.DropDownListFor(item => item.OccupationId, new SelectList(Model.Occupations, nameof(Occupation.Id), nameof(Occupation.Name)), new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Occupation start date</label>
                                <br/>
                                @Html.TextBoxFor(model => model.OccupationStartDate, "{0:yyyy-MM-dd}", new {@class = "form-control", @placeholder = "Occupation start date"})
                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Description</label>
                                <br/>
                                @Html.TextBoxFor(model => model.Description, new {@class = "form-control", @placeholder = "Description"})
                            </div>
                            <div class="form-group">
                                <label class="profile-field-title">Image URL</label>
                                <br/>
                                @Html.TextBoxFor(model => model.ImageUrl, new {@class = "form-control", @placeholder = "Url"})
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary mb-2">Register</button>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
            </div>
        </div>

    </div>
</div>