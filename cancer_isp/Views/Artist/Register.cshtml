@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Artist registration
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="profile-field-title">Alias</label>
                            <br/>
                            <input class="form-control" placeholder="Alias">
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Full name</label>
                            <br/>
                            <input class="form-control" placeholder="Full name">
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Birthdate</label>
                            <br/>
                            <input class="form-control" placeholder="Birthdate">
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Occupation</label>
                            <br/>
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Occupation start date</label>
                            <br/>
                            <input class="form-control" placeholder="Occupation start date">
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Description</label>
                            <br/>
                            <input class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
            </div>
        </div>

    </div>
</div>