@model cancer_isp.Models.ArtistViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Artist info
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="profile-field-title">Alias</label>
                            <br/>
                            <label>@Model.Artist.Pseudonym</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Full name</label>
                            <br/>
                            <label>@Model.Artist.FullName</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Birthdate</label>
                            <br/>
                            <label>@Model.Artist.Birthdate</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Occupation</label>
                            <br/>
                            <label>@Model.Artist.FkOccupation.Name</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Occupation start date</label>
                            <br/>
                            <label>@Model.Artist.OccupationStartDate</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Description</label>
                            <br/>
                            <label>@Model.Artist.Description</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                @if (Model.Comments.Any())
                {
                    <div class="card login-card">
                        <h5 class="card-header">
                            Comments
                        </h5>
                        <ul class="list-group list-group-flush">
                            <div class="list-group">
                                @foreach (var item in Model.Comments)
                                {
                                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@item.Name</h5>
                                            <small>@item.CommentDate?.ToString("yyyy-MM-dd")</small>
                                        </div>
                                        <p class="mb-1">@item.CommentContent</p>
                                    </a>
                                }
                            </div>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link">Previous</a>
                            <a href="#" class="card-link">Next</a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="card login-card">
            <h5 class="card-header">
                Image
            </h5>
            <div class="card-body">
                <img src="@Model.Artist.FkImage.ImageUrl" height="350" width="500"/>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                @if (Model.ArtistWorks.Any())
                {
                    <div class="card login-card">
                        <h5 class="card-header">
                            Songs
                        </h5>
                        <ul class="list-group list-group-flush">
                            <div class="list-group">
                                @foreach (var work in Model.ArtistWorks)
                                {
                                    <a href="@Url.Action("Index", "ArtistWork", new {Id = work.Id})" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@work.Name</h5>
                                            <small>@work.PublishDate?.ToString("yyyy-MM-dd")</small>
                                        </div>
                                    </a>
                                }
                            </div>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link">Previous</a>
                            <a href="#" class="card-link">Next</a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>