@model cancer_isp.Models.Dbo.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        User info
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="profile-field-title">Username</label>
                            <br/>
                            <label>@Model.Username</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">First name</label>
                            <br/>
                            <label>@Model.FkUserProfileInfo.FirstName</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Last name</label>
                            <br/>
                            <label>@Model.FkUserProfileInfo.LastName</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Registration date</label>
                            <br/>
                            <label>@Model.RegistrationDate</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Description</label>
                            <br/>
                            <label>@Model.FkUserProfileInfo.Description</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Birthdate</label>
                            <br/>
                            <label>@Model.FkUserProfileInfo.Birthdate</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Phone number</label>
                            <br/>
                            <label>@Model.FkUserProfileInfo.PhoneNumber</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Email</label>
                            <br/>
                            <label>@Model.Email</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Karma points</label>
                            <br/>
                            <label>@Model.KarmaPoints</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

