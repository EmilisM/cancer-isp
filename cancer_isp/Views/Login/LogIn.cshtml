@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Log in
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Username or email</label>
                            <input type="username" class="form-control" placeholder="Username or email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mb-2">Log in</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Forgot your password?
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Username or email</label>
                            <input type="username" class="form-control" placeholder="Username or email">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Haven't registered yet ?
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Use this link to sign up</label>
                        </div>
                        <div class="form-group">
                            <a asp-action="SignUp" asp-controller="Login" class="card-link">To sign up page</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>