@model cancer_isp.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_Message")

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Log in
                    </h5>
                    <div class="card-body">
                        @using (Html.BeginForm("SubmitLogIn", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Username or email</label>
                                @Html.TextBoxFor(model => model.Username, new {@class = "form-control", @placeholder = "Username or email" })
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(model => model.Password, new {@class = "form-control", @placeholder = "Password", @type = "password"})
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary mb-2">Log in</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">

                <div class="card login-card">
                    <h5 class="card-header">
                        Forgot your password?
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Username or email</label>
                            <input class="form-control" placeholder="Username or email">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Haven't registered yet ?
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Use this link to sign up</label>
                        </div>
                        <div class="form-group">
                            <a asp-action="SignUp" asp-controller="Login" class="card-link">To sign up page</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>