@{
    var action = ViewContext.RouteData.Values["Action"].ToString();
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link @( action == "LogIn" ? "active" : "" )" asp-action="LogIn" asp-controller="Login">Log In</a>
            <a class="nav-item nav-link @( action == "SignUp" ? "active" : "" )" asp-action="SignUp" asp-controller="Login">Sign Up</a>
        </div>
    </div>

    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>