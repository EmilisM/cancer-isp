@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{
    var action = ViewContext.RouteData.Values["Action"].ToString();
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" asp-action="Index" asp-controller="Home">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
            {
                <a class="nav-item nav-link @(action == "Index" && controller == "Profile" ? "active" : "")" asp-action="Index" asp-controller="Profile">Profile</a>
                <a class="nav-item nav-link @(action == "Index" && controller == "Artist" ? "active" : "")" asp-action="Index" asp-controller="Artist">Artist</a>
                <a class="nav-item nav-link @(action == "Index" && controller == "ArtistWork" ? "active" : "")" asp-action="Index" asp-controller="ArtistWork">Artist work</a>
                <a class="nav-item nav-link" asp-action="SignOut" asp-controller="Login">Sign out</a>
            }
            else
            {
                <a class="nav-item nav-link @(action == "LogIn" ? "active" : "")" asp-action="LogIn" asp-controller="Login">Log In</a>
                <a class="nav-item nav-link @(action == "SignUp" ? "active" : "")" asp-action="SignUp" asp-controller="Login">Sign Up</a>
            }
        </div>
    </div>

    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>