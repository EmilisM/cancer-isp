@model cancer_isp.Models.ArtistWorkViewModel
@{
    
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Work info
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="profile-field-title">Artist(s)</label>
                            <br/>
                            <label>@Model.Artists</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Work name</label>
                            <br/>
                            <label>@Model.ArtistWork.Name</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Creation date</label>
                            <br/>
                            <label>@Model.ArtistWork.CreationDate</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Record label</label>
                            <br/>
                            <label>@Model.ArtistWork.RecordLabel</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Genres</label>
                            <br/>
                            <label>@Model.ArtistWork.FKGenre.Name</label>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-title">Work type</label>
                            <br/>
                            <label>@Model.ArtistWork.FKGenre.FkWorkType.Name</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="card login-card">
            <h5 class="card-header">
                Image
            </h5>
            <div class="card-body">
                Image
            </div>
        </div>

        <div class="row">
            <div class="col-sm">

                <div class="card login-card">
                    <h5 class="card-header">
                        Ratings
                    </h5>
                    <ul class="list-group list-group-flush">
                        <div class="list-group">
                            @foreach (var item in Model.ArtistWorkRatings)
                            {
                                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@item.Score @item.FkArtistWork.Name</h5>
                                        <small>
                                            @if (item.Date != null)
                                            {
                                                @item.Date.Value.ToString("dd/M/yyyy")
                                            }
                                        </small>
                                    </div>
                                    <p class="mb-1">@item.Comment</p>
                                </a>
                            }
                        </div>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Previous</a>
                        <a href="#" class="card-link">Next</a>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>