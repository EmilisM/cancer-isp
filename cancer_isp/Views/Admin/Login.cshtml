@model cancer_isp.Models.LoginModel
@{
    Layout = "_LayoutAdmin";
}
@await Html.PartialAsync("_Message")

<div class="row">
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Admin log in
                    </h5>
                    <div class="card-body">
                        @using (Html.BeginForm("LogIn", "Admin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Username</label>
                                @Html.TextBoxFor(model => model.Username, new {@class = "form-control", @placeholder = "Username"})
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(model => model.Password, new {@class = "form-control", @placeholder = "Password", @type = "password"})
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary mb-2">Sign up</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm">

        <div class="row">
            <div class="col-sm">
                <div class="card login-card">
                    <h5 class="card-header">
                        Return to home page
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            Don't know how you got here?
                        </div>
                        <div class="form-group">
                            <a asp-action="Index" asp-controller="Home">Return to home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>